{
  "name": "server",
  "version": "1.0.0",
  "description": "bm-server",
  "main": "functions/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node -r dotenv/config -r ts-node/register ./src/server.ts",
    "start": "node dist/index.js",
    "build": "cross-env NODE_ENV=production tsc",
    "dev:watch": "nodemon",
    "postinstall": "tsc"
  },
  "engines": {
    "node": "12.16.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run dev",
    "ext": "ts"
  },
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.20",
    "random-words": "^1.1.1",
    "serve": "^11.3.2",
    "serverless-http": "^2.6.0",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.12.7",
    "@types/node": "^14.14.10",
    "@types/socket.io": "^2.1.11",
    "cross-env": "^7.0.3",
    "eslint": "^7.14.0",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.6",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  }
}
